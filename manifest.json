{
  "manifest_version": 3,
  "name": "AI Smart Notes",
  "version": "1.5",
  "description": "A Chrome extension that allows users to quickly take and download notes with AI-powered explanations in simple terms.",
  "permissions": ["contextMenus", "storage", "downloads"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
  "default_icon": {
    "16": "new.png",
    "48": "new.png",
    "128": "new.png"
  }
  },
  "icons": {
    "16": "new.png",
    "48": "new.png",
    "128": "new.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["apikey.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
